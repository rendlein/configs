# # Colors
# # # # # # # # # # # # # # # # # # # # # # # # # # # # # # 
if ( `uname` == "FreeBSD") then
    alias ls        ls -G
else
    alias ls        ls --color=auto
endif

alias grep      grep --color=auto

alias lsa       ls -a
alias lsl       ls -l
alias lsh       ls -lh
alias lsi       ls -il
alias lsr       ls -R

# # Shortcuts
# # # # # # # # # # # # # # # # # # # # # # # # # # # # # # 
#alias scheme    /usr/local/bin/scheme48

alias libd      musicpd ~/.mpd.lib/mpd.conf
alias lib       ncmpcpp -p 6601 -c ~/.ncmpcpp.lib/config

# # Git
# # # # # # # # # # # # # # # # # # # # # # # # # # # # # # 
alias gs        git status
alias gc        git commit
alias gd        git diff
alias gp        git push
alias gsu       git submodule init && git submodule update

